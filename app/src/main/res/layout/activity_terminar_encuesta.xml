<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Terminar_encuesta_button_Volver"
        android:layout_width="73dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_orange"
        android:drawableBottom="@drawable/ic_volver"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Terminar_encuesta_button_Volver"
        android:layout_centerHorizontal="true"
        android:autoSizeTextType="uniform"
        android:text="@string/descripcion"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/LinearLayoutTitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitulo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Terminar_encuesta_preguntas"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Terminar_encuesta_fecha_termino"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayoutTitulos"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="81dp">

        <TextView
            android:id="@+id/textViewCantidadPreguntas"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="@string/descripcion"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewFechaTermino"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:text="@string/descripcion"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonbajarEncuesta"
            android:background="@drawable/round_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terminar_encuesta_bajar_encuesta" />
    </LinearLayout>
</RelativeLayout>