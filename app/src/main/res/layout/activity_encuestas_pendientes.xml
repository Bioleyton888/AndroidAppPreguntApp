<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/encuestasPendientesBotonVolver"
        android:layout_width="73dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_orange"
        android:drawableBottom="@drawable/ic_volver"
        android:textAlignment="center" />

    <Button
        android:id="@+id/encuestasPendientesBotonComenzar"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@id/encuestasPendientesBotonVolver"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_orange"
        android:text="@string/buscar_encuestas"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:layout_below="@id/encuestasPendientesBotonComenzar"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:id="@+id/LinearLayoutEncuestasPendientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/layoutEncuestasPendientes"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>